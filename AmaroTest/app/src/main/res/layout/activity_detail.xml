<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/act_detail_iv"
        android:transitionName="product_image"
        android:contentDescription="@string/act_detail_iv_content_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/act_detail_tv_name"
        android:text="@string/sample_product_name"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:transitionName="product_name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_detail_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/act_detail_tv_regular_price"
        android:text="@string/sample_product_price"
        android:transitionName="product_price"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_detail_tv_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/act_detail_tv_promotional_price"
        android:text="@string/sample_product_price"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_detail_tv_regular_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/act_detail_tv_sale"
        android:text="@string/act_detail_on_sale"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintStart_toStartOf="@id/act_detail_tv_name"
        app:layout_constraintEnd_toEndOf="@id/act_detail_tv_name"
        app:layout_constraintTop_toBottomOf="@id/act_detail_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/act_detail_container_sizes"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/act_detail_tv_promotional_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/act_detail_available_sizes"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>